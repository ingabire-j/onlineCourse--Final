<%- include("./partials/header") -%>

<div class="bradcam_area breadcam_bg overlay2">
    <!-- form itself end-->
    <form action="/users/register" method="POST" class="white-popup-block">
    <%- include("./partials/flash-msg") -%>
        <div class="popup_box ">
            <div class="popup_inner">
                <div class="logo text-center">
                    <a href="#">
                        <i class="fas fa-language icon ml-3"></i>
                        <div class="navbar-brand ml-0" style="font-family: 'Bree Serif', serif;">WELCOME POLYGLOTIANS
                        </div>
                    </a>
                </div>
                <h3>Registration</h3>
                <div class="row">
                    <div class="col-xl-12 col-md-12">
                        <input type="text" name="name" placeholder="Enter Your Name" required value="<%= typeof name != 'undefined' ? name : '' %>">
                    </div>
                    <div class="col-xl-12 col-md-12">
                        <input type="email" name="email" placeholder="Enter email" value="<%= typeof email != 'undefined' ? email : '' %>" required>
                    </div>
                    <div class="col-xl-12 col-md-12">
                        <input type="password" name="password" placeholder="Password" value="<%= typeof password!= 'undefined' ? password : '' %>" required>
                    </div>
                    <div class="col-xl-12 col-md-12">
                        <input type="password" name="password2" placeholder="Confirm password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" required>
                    </div>
                    <div class="col-xl-12">
                        <button type="submit" class="btn btn-outline-primary">Sign Up</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <!-- form itself end -->

</div>


<%- include("./partials/footer") -%>





