        <div class="col-xl-3 col-lg-4 col-md-4 col-sm-4">

        </div>
        <div class="col-xl-6 col-lg-4 col-md-4 col-sm-4">
            <h2 class="p-3" style="border: 1px solid black;">YOUR BLOG UPDATES (<%= count %>) </h2>
            <div class="text-center" >
                <!-- <article class="blog_item"> -->
                <% blog.forEach((blogs)=>{ %>
                <div class="blog_details" style="min-height: 100px;min-width: 700px;">
                    <h2><%= blogs.title %></h2>
                    <blockquote class="blockquote">
                        <p class="mb-0" style="color:black !important"><%= blogs.blog%></p>
                        <footer class="blockquote-footer"><cite title="Source Title" style="color:black !important" class="font-weight-bolder"><%= blogs.name%></cite><BR></BR>
                        <span style="color:black"> <strong>Posted On:</strong>  <%= blogs.date %></span>
                        </footer>
                    </blockquote>
                    <form action="/blogDelete" method="POST">
                        <input type="hidden" name="id" value="<%= blogs._id %>">
                        <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete </button>
                    </form>
                </div>
               <% }) %>
                <br>
                <br>
            </div>
